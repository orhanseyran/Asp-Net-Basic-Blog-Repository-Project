


@{
    ViewData["Title"] = "BlogAdd";
    var kategoriler =  ViewBag.Kategori;
}
@model Blogs;


<form asp-action="BlogAdd" method="post">
<div class="mb-3">
    <label for="" class="form-label">Blog Adı</label>
    <input
    asp-for="Title"
     
 
        class="form-control"
   

  
    />
    <small id="helpId" class="form-text text-muted">Help text</small>
</div>
<div class="mb-3">
    <label for="" class="form-label">İçerik</label>
    <textarea class="form-control" asp-for="Content" id="" rows="3"></textarea>
</div>
<div class="mb-3">
    <label for="" class="form-label">Kategori</label>
    <select
        class="form-select form-select-lg"
        asp-for="KategoriName"
        id=""
    >
        <option selected>Seçim Yap</option>
        @foreach (var kategori in kategoriler)
        {
               <option value="@kategori.Name">@kategori.Name</option>
        }
     

    </select>
</div>
<button
    type="submit"
    class="btn btn-primary"
>
    Kaydet
</button>
</form>




